@model IEnumerable<WebApplication3.Models.Product>

@{
    ViewBag.Title = "Index";
    string sortby = ViewBag.sortby ?? "ProductId";
    string direction = ViewBag.direction ?? "Up";
}

<h2 class="minunupp">Tootenimekiri</h2>



@*See on htmli kommentaar*@
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="sortnupp" data-colnum="0">
                @Html.DisplayNameFor(model => model.ProductName)
                @*<a href="@Url.Action("Index", new { sortby = "ProductName" })">@Html.DisplayNameFor(x => x.ProductName)</a>*@
                @*@Html.ActionLink("Toote Nimi", "Index",
                new { sortby = "ProductName", direction = sortby == "ProductName" && direction == "Up" ? "Down" : "Up" })*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityPerUnit)
            </th>
            <th class="sortnupp" data-colnum="4" data-type="num">
                @Html.DisplayNameFor(model => model.UnitPrice)
                @*@Html.ActionLink("Hind", "Index",
                new { sortby = "UnitPrice", direction = sortby == "UnitPrice" && direction == "Up" ? "Down" : "Up" })*@
            </th>
            <th class="sortnupp" data-colnum="5" data-type="num">
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsOnOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReorderLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discontinued)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
  
    
    
    <tbody>
        @foreach (var item in Model)
        {
<tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityPerUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsOnOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReorderLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discontinued)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductID })
            </td>
        </tr>
    }
        </tbody>

</table>
